<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    
    
     <TextView
         android:id="@+id/Timmer"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="30dp"
         android:capitalize="characters"
         android:text="Your event"
         android:textSize="40dp" />

     <EditText
         android:id="@+id/myEvent"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/Timmer"
         android:layout_below="@+id/Timmer"
         android:ems="10" />

     <Button
         android:id="@+id/ChangeDate"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_alignLeft="@+id/myEvent"
         android:layout_below="@+id/myEvent"
         android:layout_marginTop="28dp"
         android:background="@drawable/time"/>

     <TextView
         android:id="@+id/output"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/ChangeDate"
         android:layout_alignBottom="@+id/ChangeDate"
         android:layout_marginLeft="14dp"
         android:layout_toRightOf="@+id/ChangeDate"
         android:capitalize="characters"
         android:text="Your Time Left"
         android:textSize="20dp" />

     <Button
         android:id="@+id/yes"
         android:layout_width="100dp"
         android:layout_height="40dp"
         android:layout_below="@+id/ChangeDate"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="117dp"
         android:background="@drawable/ok"
         android:minHeight="20dip"/>

</RelativeLayout>